{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./src",
    "declaration": true,
    "rootDir": "./ts_src",
    "types": [
      "node"
    ],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
      "ts_src/**/*.ts", 
      "ts_src/**/*.js"  
  ],
  "exclude": [
      "**/*.test.ts",
      "node_modules/**/*"
  ]
}