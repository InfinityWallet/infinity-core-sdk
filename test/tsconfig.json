{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "../",
      "declaration": true,
      "rootDir": "../",
      "rootDirs": [
        "../src",
        "../types"
      ],
      "types": [
        "node",
        "mocha"
      ],
      "allowJs": true,
      "strict": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "baseUrl": ".",
      "paths": {
        "../src/*": ["../ts_src/*"]
      }
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "../ts_src/**/*.ts"
    ]
  }